<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:angle="90" android:endColor="#808080" android:gradientRadius="30dp" android:startColor="#808080" android:type="linear" />

            <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="5dp" android:radius="10dp" android:topLeftRadius="5dp" android:topRightRadius="5dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="90" android:endColor="#595959" android:gradientRadius="30dp" android:startColor="#595959" android:type="linear" />

            <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="5dp" android:radius="10dp" android:topLeftRadius="5dp" android:topRightRadius="5dp" />
        </shape>
    </item>
</selector>